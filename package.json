{
  "name": "bubbles",
  "version": "1.0.0",
  "description": "bubbles",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "engines": {
    "node": "5.7.0",
    "npm": "3.7.3"
  },
  "scripts": {
    "clean": "rm -rf ./web/public ./web/public/fonts ./web/public/images",

    "dir:assets": "mkdir -p ./web/public/fonts ./web/public/images ./web/public ./web/public/js ./web/public/css",
    "concat:assets:js": "concat-cli -f ./bower_components/jquery/dist/jquery.js ./bower_components/bootstrap/dist/js/bootstrap.js ./bower_components/moment/min/moment-with-locales.js ./bower_components/twbs-pagination/jquery.twbsPagination.js ./bower_components/lightbox2/dist/js/lightbox.js ./node_modules/riot/riot+compiler.js -o ./web/public/assets.js",
    "concat:assets:css": "concat-cli -f ./bower_components/bootstrap/dist/css/bootstrap.css ./bower_components/bootstrap/dist/css/bootstrap-theme.css ./bower_components/lightbox2/dist/css/lightbox.css -o ./web/public/assets.css",
    "concat:assets": "npm run concat:assets:js & npm run concat:assets:css",

    "copy:assets:images": "cp -Rf ./bower_components/lightbox2/dist/images ./web/public",
    "copy:assets:fonts": "cp -Rf ./bower_components/bootstrap/dist/fonts ./web/public",
    "copy:assets": "npm run copy:assets:images & npm run copy:assets:fonts",

    "minify:assets:js": "minify --output ./web/public/js/assets.min.js ./web/public/assets.js",
    "minify:assets:css": "minify --output ./web/public/css/assets.min.css ./web/public/assets.css",
    "preminify:assets": "npm run concat:assets",
    "minify:assets": "npm run minify:assets:js & npm run minify:assets:css",
    "preassets": "npm run dir:assets",
    "assets": "npm run minify:assets & npm run copy:assets",
    "remove:assets": "rm ./web/public/assets.css ./web/public/assets.js",


    "less": "lessc ./src/Shoko/ApiBundle/Resources/less/style.less ./web/public/app.css",
    "babel": "babel ./src/Shoko/ApiBundle/Resources/js/**/*.js ./src/Shoko/ApiBundle/Resources/js/app.js -o ./web/public/app.js",

    "minify:app:js": "minify --output ./web/public/js/app.min.js ./web/public/app.js",
    "minify:app:css": "minify --output ./web/public/css/app.min.css ./web/public/app.css",
    "preminify:app": "npm run less & npm run babel",
    "minify:app": "npm run minify:app:js & npm run minify:app:css",

    "riot": "riot ./src/Shoko/ApiBundle/Resources/tags ./web/public/js/tags.js",
    "postriot":"concat-cli -f ./web/public/js/tags.js ./node_modules/riotgear/dist/rg-ga/rg-ga.js ./web/public/js/app.min.js -o ./web/public/js/app.min.js",
    "preapp": "npm run minify:app",
    "app": "npm run riot",
    "remove:app": "rm ./web/public/app.css ./web/public/app.js",

    "dev": "npm run watch & npm run livereload",
    "watch": "watch 'npm run app' ./src/Shoko/ApiBundle/Resources/ ./app/Resources/",
    "livereload": "livereload ./web/public/js/ ./web/public/css/",

    "build": "npm run clean && npm run assets && npm run app",

    "postinstall": "bower install && npm run assets",

    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shokohsc/bubbles.git"
  },
  "keywords": [
    "twitch"
  ],
  "author": "shokohsc@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shokohsc/bubbles/issues"
  },
  "homepage": "https://github.com/shokohsc/bubbles#readme",
  "dependencies": {
    "babel-cli": "^6.5.1",
    "babel-preset-es2015": "^6.5.0",
    "bower": "^1.7.7",
    "concat-cli": "^4.0.0",
    "less": "^2.6.0",
    "minifier": "^0.7.1",
    "riot": "^2.3.18",
    "riotgear": "^3.3.1"
  },
  "devDependencies": {
    "livereload": "^0.4.1",
    "watch": "^0.17.1"
  }
}
