{% if search is defined %}
	{% set route = 'serie' %}
{% else %}
	{% set route = 'comic' %}
{% endif %}
<div class="col-xs-12 col-sm-4 col-md-1 comic-item-list">

	<div class="row">
		<a href="{{ path(route, {'id':comic.id}) }}" title="{{ comic.title|title }}">
			{% include 'front/comic_image.html.twig' %}
		</a>
	</div>

	<div class="row">
		<strong>
			<a href="{{ path(route, {'id':comic.id}) }}" title="{{ comic.title|title }}">{{ comic.title|title }}</a>
		</strong>
	</div>
</div>
