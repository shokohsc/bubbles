{% extends "base.html.twig" %}

{% block title %} {{ comic.title|title }}{% endblock %}

{% block content %}
    <div class="media">
      <a class="media-left col-xs-12 col-sm-4 col-md-3 lightbox" href="{{ comic.thumbnail.path }}/detail.{{ comic.thumbnail.extension }}">
        {% include 'front/comic/image.html.twig' %}
      </a>
      <div class="media-body col-xs-12 col-sm-8 col-md-9">
        <h2 class="media-heading">
          {{ comic.title|title }} <small><a href="{{ comic.urls.0.url }}" target="_blank" title="{{ comic.title|title }}"> <span class="glyphicon glyphicon-link" aria-hidden="true"></span></a></small>
        </h2>
        <table class="table table-condensed">
          <tr>
            <td><strong>{{ 'comic.published'|trans|capitalize }}</strong></td>
            <td>
              <a href="{{ path('released', {
              'day':   comic.dates.0.date|date("d"),
              'month': comic.dates.0.date|date("m"),
              'year':  comic.dates.0.date|date("Y") }) }}">
                {{ comic.dates.0.date|date("F d, Y") }}
              </a>
            </td>
          </tr>
          <tr>
            <td><strong>{{ 'comic.serie'|trans|capitalize }}</strong></td>
            <td><a href="{{ path('serie', {'id' : comic.series.resourceURI|resourceId }) }}" title="{{ comic.series.name|title }}">{{ comic.series.name|title }}</a></td>
          </tr>

          {% for creator in comic.creators.items %}
          <tr>
            <td><strong>{{ creator.role|trans|capitalize }}</strong></td>
            <td><a href="{{ path('creator', {'id' : creator.resourceURI|resourceId }) }}" title="{{ comic.series.name|title }}">{{ creator.name|title }}</a></td>
          </tr>
          {% endfor %}
        </table>

        <p>{{ comic.description|striptags|htmlDecode }}</p>
      </div>
    </div>

{% endblock %}
