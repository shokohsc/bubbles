<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="author" content="Dimitri Pommier">
        <meta name="description" content="{{ 'base.content'|trans|title }}">
        {% image '@AppBundle/Resources/public/images/favicon.png' output='favicon.png' %}
          <link rel="shortcut icon" href="{{ asset_url }}" />
        {% endimage %}
        <title>{% block title %}{{ 'base.title'|trans|title }}{% endblock %}</title>

        <!-- Latest compiled and minified CSS -->
        <link type="text/css" rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

        {% block stylesheets %}
          {% stylesheets '@AppBundle/Resources/public/css/*' %}
            <link type="text/css" rel="stylesheet" href="{{ asset_url }}" />
          {% endstylesheets %}

          {% stylesheets '@AppBundle/Resources/public/fonts/Code New Roman.otf' %}
          {% endstylesheets %}
        {% endblock %}

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

        <!-- The core React library -->
        <script src="http://fb.me/react-0.13.3.js"></script>
        <!-- In-browser JSX transformer, remove when pre-compiling JSX. -->
        <script src="http://fb.me/JSXTransformer-0.13.3.js"></script>
    </head>
    <body>

        <div class="container">
            {% include 'front/navbar.html.twig' %}
            <div id="content">
                {% block content %}{% endblock %}
            </div>
            {% block pagination %}{% endblock %}
        </div>

        {% include 'front/credits.html.twig' %}

        <!-- JQuery -->
        <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <!-- Bootstrap Latest compiled and minified JavaScript -->
        <script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

        <!-- FOSRoutingBundle -->
        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

        <!-- Magnific-popup Lightbox CDN -->
        <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/0.9.9/jquery.magnific-popup.min.js"></script>

        {% block javascripts %}
          {% javascripts '@AppBundle/Resources/public/js/main.js' %}
            <script type="text/javascript" src="{{ asset_url }}" />
          {% endjavascripts %}
        {% endblock %}

    </body>
</html>
